<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#ececec"
    tools:context=".AccountPage.AboutUs">

    <ImageView
        android:id="@+id/BackButton"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="About Us"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/BackButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="332dp"
        android:layout_height="135dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:padding="5dp"
        android:text="Welcome to Aqua Delivery, your go-to solution for convenient and reliable water bottle delivery. At Aqua Delivery, we are committed to making hydration accessible and hassle-free for everyone."
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="335dp"
        android:layout_height="158dp"
        android:layout_marginTop="18dp"
        android:fontFamily="serif"
        android:padding="5dp"
        android:text="Founded in 2020, Aqua Delivery has quickly emerged as a trusted name in the water bottle delivery industry. Our mission is simple yet powerful: to provide our customers with refreshing, high-quality water bottles right at their doorstep."
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="341dp"
        android:layout_height="108dp"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:padding="5dp"
        android:text="To get started, download the Aqua Delivery app or visit our website. Stay hydrated, stay refreshed with Aqua Delivery."
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:layout_width="281dp"
        android:layout_height="176dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
